                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_span="1"
                    android:padding="2dp"
                    android:text="@string/isPrimeFunctionText"
                    android:onClick="primeBtn"
                    android:textAllCaps="false"
                    android:textColor="@color/yellows"
                    android:textSize="17sp"
                    android:textStyle="bold|normal"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    style="@style/ButtonColor1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_marginBottom="1dp"
                    android:layout_span="1"
                    android:padding="2dp"
                    android:text="@string/xSquaredText"
                    android:onClick="xSquareBtn"
                    android:textAllCaps="false"
                    android:textColor="@color/yellows"
                    android:textSize="17sp"
                    android:textStyle="bold|normal"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    style="@style/ButtonColor1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_span="1"
                    android:padding="2dp"
                    android:text="@string/xPowerYText"
                    android:onClick="xPowerYBtn"
                    android:textAllCaps="false"
                    android:textColor="@color/yellows"
                    android:textSize="17sp"
                    android:textStyle="bold|normal"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    style="@style/ButtonColor2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_span="1"
                    android:padding="2dp"
                    android:text="@string/clearText"
                    android:onClick="clearBtn"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="17sp"
                    android:textStyle="bold|normal"
                    app:shapeAppearanceOverlay="@style/Button8" />

                <Button
                    style="@style/ButtonColor1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="5dp"
                    android:layout_span="1"
                    android:padding="2dp"
