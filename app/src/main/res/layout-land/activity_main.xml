<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#1E1E1E"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/preCalcView"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:enabled="false"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold|normal" />

        <EditText
            android:id="@+id/displayText"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#1E1E1E"
            android:enabled="false"
            android:hint="0"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="29sp"
            android:textStyle="bold|normal" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="@drawable/background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/blacks"
            android:minWidth="0dp"
            android:onClick="rotateBtn"
            app:icon="@drawable/ic_rotation"
            app:iconPadding="0dp"
            app:iconSize="20dp"
            app:shapeAppearanceOverlay="@style/Button8" />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/blacks"
            android:minWidth="0dp"
            android:onClick="backspaceBtn"
            app:icon="@android:drawable/ic_input_delete"
            app:iconPadding="0dp"
            app:iconSize="25dp"
            app:shapeAppearanceOverlay="@style/Button8" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:shrinkColumns="*"
            android:stretchColumns="*">

            <TableRow
